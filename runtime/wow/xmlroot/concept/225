<?xml version="1.0"?>

<!DOCTYPE concept SYSTEM 'concept.dtd'>

<concept>
  <name>tutorial.templates</name>
  <description>WOW! templates for graphauthor and concept editor</description>
  <attributes>
    <attribute>
      <name>access</name>
      <description>triggered by page access</description>
      <default>false</default>
      <type>3</type>
      <actions>
	<action>
	  <expr>! tutorial.templates.suitability &amp;&amp; tutorial.templates.knowledge &lt; 35</expr>
	  <trigger>true</trigger>
	  <truestat>
	    <assignment>
	      <variable>tutorial.templates.knowledge</variable>
	      <expr>35</expr>
	    </assignment>
	  </truestat>
	  <falsestat />
	</action>
	<action>
	  <expr>tutorial.templates.suitability</expr>
	  <trigger>true</trigger>
	  <truestat>
	    <assignment>
	      <variable>tutorial.templates.knowledge</variable>
	      <expr>100</expr>
	    </assignment>
	  </truestat>
	  <falsestat />
	</action>
	<action>
	  <expr>tutorial.templates.suitability</expr>
	  <trigger>true</trigger>
	  <truestat>
	    <assignment>
	      <variable>tutorial.templates.visited</variable>
	      <expr>tutorial.templates.visited + 1</expr>
	    </assignment>
	  </truestat>
	  <falsestat />
	</action>
      </actions>
      <readonly>true</readonly>
      <system>true</system>
      <persistent>false</persistent>
    </attribute>
    <attribute>
      <name>knowledge</name>
      <description>knowledge about this concept</description>
      <default>0</default>
      <type>1</type>
      <actions>
	<action>
	  <expr>_tutorial.templates.knowledge &gt; 0</expr>
	  <trigger>true</trigger>
	  <truestat>
	    <assignment>
	      <variable>tutorial.advanced.knowledge</variable>
	      <expr>tutorial.advanced.knowledge + (0.2 * _tutorial.templates.knowledge)</expr>
	    </assignment>
	  </truestat>
	  <falsestat />
	</action>
      </actions>
      <readonly>false</readonly>
      <system>false</system>
      <persistent>true</persistent>
    </attribute>
    <attribute>
      <name>visited</name>
      <description>has this page been visited?</description>
      <default>0</default>
      <type>1</type>
      <actions />
      <readonly>true</readonly>
      <system>true</system>
      <persistent>true</persistent>
    </attribute>
    <attribute>
      <name>suitability</name>
      <description>the suitability of this page</description>
      <default>true &amp;&amp; ((tutorial.advanced.knowledge &gt;= 50 ))</default>
      <type>3</type>
      <actions />
      <readonly>true</readonly>
      <system>false</system>
      <persistent>false</persistent>
    </attribute>
    <attribute>
      <name>interest</name>
      <description>is the user interested in this concept</description>
      <default>0</default>
      <type>1</type>
      <actions />
      <readonly>false</readonly>
      <system>false</system>
      <persistent>true</persistent>
    </attribute>
  </attributes>
  <resource>file:/tutorial/xml/templates.xhtml</resource>
  <concepttype>page</concepttype>
  <title>templates</title>
  <hierarchy>
    <firstchild></firstchild>
    <nextsib>tutorial.concepttemplate</nextsib>
    <parent>tutorial.advanced</parent>
  </hierarchy>
</concept>

